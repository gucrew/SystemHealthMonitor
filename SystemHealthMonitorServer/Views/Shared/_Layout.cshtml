<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - System Health Monitor</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous">
</head>
<body>
    @{ 
        var controller = ViewContext.RouteData.Values["controller"].ToString();
    }

    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <a class="navbar-brand" href="/">
            <i class="fa fa-heartbeat"></i>
        </a>
        <div class="collapse navbar-collapse">
            <div class="navbar-nav">
                <a class="nav-item nav-link @(controller == "Home" ? "active" : "")" href="/">Home</a>
                <a class="nav-item nav-link @(controller == "Configuration" ? "active" : "")" href="@Url.Action("Index", "Configuration", new { })">Configuration</a>
            </div>
        </div>
    </nav>

    <div class="">
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>